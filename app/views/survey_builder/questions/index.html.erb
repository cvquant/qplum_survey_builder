<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Question title</th>
      <th>Type</th>
      <th>Question data</th>
      <th>Answer specs</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.name %></td>
        <td><%= question.question_title %></td>
        <td><%= question.type %></td>
        <td><%= question.question_data %></td>
        <td><%= question.answer_specs %></td>
        <td><%= question.position %></td>
        <td><%= link_to 'Show', survey_form_question_path(@survey_form, question) %></td>
        <td><%= link_to 'Edit', edit_survey_form_question_path(@survey_form, question) %></td>
        <td><%= link_to 'Destroy', survey_form_question_path(@survey_form, question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% @types.each do |type, class_name| %>
  <%= link_to "New #{type} Question", new_typed_survey_form_questions_path(@survey_form, type) %><br />
<% end %>
